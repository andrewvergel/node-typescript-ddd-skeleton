{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "src/",
    "paths": {
      "*": [
        "*"
      ],
      "@shared/*":[
        "shared/*"
      ]
    },
    "types": ["@types/jest"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": true
  },
  "include": [
    "src/**.ts",
    "src/**/**.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}