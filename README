  - created
  - updated
  - status
  - name
  - path
- Perfiles
  - id
  - created
  - updated
  - status
  - name
- Perfiles && Acciones
  - id
  - profile_id
  - action_id
  - read
  - write
  - update
  - delete
- Usuarios
  - id
  - created
  - updated
  - status
  - email
  - alias
  - password
  - oauth_data
  - user_image
  - profile_id
- Posts
  - id
  - created
  - updated
  - status
  - post_title
  - post_content
  - post_image
  - user_id

